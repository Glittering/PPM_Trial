<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="false">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_gravity="center|left"
     android:orientation="horizontal">
     <ImageView
         android:id="@+id/item_img"
         android:layout_width="100dp"
         android:layout_gravity="left"
         android:layout_height="match_parent"
         android:src="@mipmap/carnum_default"/>
     <LinearLayout
         android:layout_marginLeft="10dp"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:gravity="center|left"
         android:orientation="vertical">
         <TextView
             android:id="@+id/item_car_num"
             android:layout_width="wrap_content"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:textColor="#48495f"
             android:textSize="18sp"
             android:gravity="center"
             android:text="测A123456"/>
         <TextView
             android:textSize="13sp"
             android:id="@+id/item_car_type"
             android:layout_width="wrap_content"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:gravity="center"
             android:text="车辆类型：大型车"/>
         <TextView
             android:textSize="13sp"
             android:id="@+id/item_card_type"
             android:layout_width="wrap_content"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:gravity="center"
             android:text="凭证类型：月票车"/>

         <TextView
             android:textSize="13sp"
             android:id="@+id/item_carin_time"
             android:layout_width="wrap_content"
             android:layout_height="0dp"
             android:gravity="center|left"
             android:layout_weight="1"
             android:text="入场时间：2017-7-15 12:30:30"/>

     </LinearLayout>
 </LinearLayout>
</android.support.v7.widget.CardView>
