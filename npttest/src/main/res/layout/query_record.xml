<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">
    <!--顶部信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/query_record_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/ic_title_back_arrow"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="查询记录"
            android:layout_marginRight="40dp"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="15dp"
        android:background="#ccc">
    </View>

    <LinearLayout
        android:id="@+id/query_carinrecord"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:clickable="true"
        android:background="@drawable/ripple_button_white_style"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="入场记录"
            android:textColor="@color/fontcolor"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:src="@mipmap/utils_arrow" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ccc">
    </View>

    <LinearLayout
        android:id="@+id/query_caroutrecord"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/ripple_button_white_style"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="出场记录"
            android:textColor="@color/fontcolor"
            android:textSize="16dp" />

        <ImageView
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/utils_arrow" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ccc">
    </View>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="15dp"
        android:background="#ccc">
    </View>
    <LinearLayout
        android:id="@+id/query_chargerecord"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/ripple_button_white_style"
        android:layout_height="45dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="收费记录"
            android:textSize="16dp"
            android:gravity="center|left"
            android:textColor="@color/fontcolor"
            android:layout_marginLeft="15dp"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/utils_arrow" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ccc">
    </View>
</LinearLayout>