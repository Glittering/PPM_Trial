<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ppm_bg1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wth_return"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/ic_left" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></View>

        <TextView
            android:id="@+id/wth_city"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="深圳市"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center|bottom"
        android:paddingLeft="30dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/wth_temp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="27°"
                android:textColor="#FFFFFF"
                android:typeface="monospace"
                android:textSize="60sp"/>
            <TextView
                android:id="@+id/wth_temp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21°/30°"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:typeface="monospace"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center|bottom"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|bottom">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_leaf"/>
            <TextView
                android:id="@+id/wth_aqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="空气良"
                android:gravity="center"
                android:layout_marginLeft="-8dp"
                android:textColor="#FFFFFF"
                android:typeface="monospace"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|bottom">
            <ImageView
                android:id="@+id/wth_wthimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_wu_18"/>
            <TextView
                android:id="@+id/wth_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="多云"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:typeface="monospace"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|bottom">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_feng"/>
            <TextView
                android:id="@+id/wth_winddirect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1级西南风"
                android:gravity="center"
                android:layout_marginLeft="-10dp"
                android:textColor="#FFFFFF"
                android:typeface="monospace"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="2dp"
        android:gravity="center|bottom"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/wth_time"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:typeface="monospace"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/wth_humidity"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:typeface="monospace"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/wth_pressure"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:typeface="monospace"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/wth_pm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:typeface="monospace"
            android:textSize="16sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#FFFFFF"></View>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/wth_swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/wth_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>