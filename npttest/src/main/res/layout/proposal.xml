<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">

    <!--顶部信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/propo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/ic_title_back_arrow"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="建议反馈"
            android:layout_marginRight="40dp"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/white_bg"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textColor="@color/fontcolor"
            android:textSize="17sp"
            android:text="问题和建议"
            android:gravity="center|left"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:lineSpacingExtra="5dp"
            android:id="@+id/propo_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请简要描述你的问题和建议"
            android:textSize="16sp"
            android:gravity="top"
            android:padding="10dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/fontcolor"
        android:padding="10dp"
        android:lineSpacingExtra="3dp"
        android:text="   我们竭诚邀请您加入我们的产品改进计划，您在使用此产品中，遇到的问题和您宝贵的意见都可以在此描述，您的问题和意见我们都会高度的重视，感谢您的参与。"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></View>

    <Button
        android:id="@+id/propo_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ripple_button_style"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:text="提  交"
        android:textSize="17sp"
        android:textColor="#FFFFFF"
        />
</LinearLayout>